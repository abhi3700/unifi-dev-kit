###
# @name GetOCPReceipt
@receipt_id = 1ra0e4b3cdbe12421f3945715d
GET {{HOST}}/payment/onchain/receipt/{{receipt_id}}
{{AUTH_HEADER}}

### Pay History page-1
# @name PayHistory
@sort_by_latest = true
@from_start = false
GET {{HOST}}/payment/onchain/receipts/{{USER_ID}}/{{sort_by_latest}}/{{from_start}}
{{AUTH_HEADER}}

### Pay History page-1+
# @name PayHistory
@sort_by_latest = true
@from_start = false
# ℹ️ next = true, previous = false
@next_or_previous = true
# default: 20, if not set.
@limit = 20
@chain = Sepolia
GET {{HOST}}/payment/onchain/receipts/{{USER_ID}}/{{sort_by_latest}}/{{from_start}}?next_or_previous={{next_or_previous}}&limit={{limit}}&chain={{chain}}
# GET {{HOST}}/payment/onchain/receipts/{{USER_ID}}/{{sort_by_latest}}/{{from_start}}?limit={{limit}}&chain={{chain}}
{{AUTH_HEADER}}